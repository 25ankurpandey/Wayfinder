<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Search Bar Container (hidden during navigation) -->
    <FrameLayout
        android:id="@+id/autocomplete_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_background"
        android:padding="4dp">
        <fragment
            android:id="@+id/autocomplete_fragment"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <!-- Navigation Header (shown during active navigation) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/navigation_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/dark_surface_elevated"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <!-- Close/Exit Navigation Button -->
            <ImageButton
                android:id="@+id/exit_navigation_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close"
                android:contentDescription="Exit Navigation"
                android:scaleType="centerInside"
                android:padding="8dp" />

            <!-- Destination Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/navigation_destination_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Navigating to..."
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/navigation_eta_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ETA: --"
                    android:textColor="@color/cyan_primary"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Connection Status Dot -->
            <View
                android:id="@+id/navigation_connection_dot"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/connection_indicator_disconnected" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <ImageButton
        android:id="@+id/my_location_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:elevation="4dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/circle_button"
        android:src="@drawable/ic_current_location"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerInside"
        android:padding="10dp" />

    <ImageButton
        android:id="@+id/directions_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:elevation="4dp"
        android:background="@drawable/circle_button"
        android:src="@drawable/ic_directions"
        android:layout_above="@id/my_location_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:scaleType="centerInside"
        android:padding="10dp" />

    <ImageButton
        android:id="@+id/walking_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="4dp"
        android:background="@drawable/navigation_mode_circle_button"
        android:src="@drawable/ic_walk"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@id/directions_button"
        android:layout_toStartOf="@id/directions_button"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:scaleType="centerInside"
        android:padding="10dp" />

    <ImageButton
        android:id="@+id/driving_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="4dp"
        android:background="@drawable/navigation_mode_circle_button"
        android:src="@drawable/ic_drive"
        android:layout_toStartOf="@id/directions_button"
        android:layout_alignTop="@id/directions_button"
        android:layout_marginEnd="18dp"
        android:visibility="gone"
        android:scaleType="centerInside"
        android:padding="10dp" />

    <ImageButton
        android:id="@+id/start_navigation_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:elevation="4dp"
        android:background="@drawable/circle_button"
        android:src="@drawable/ic_start_navigation"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:visibility="visible"
        android:scaleType="centerInside"
        android:padding="10dp" />

    <ImageButton
        android:id="@+id/start_server_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:elevation="4dp"
        android:background="@drawable/navigation_mode_circle_button"
        android:src="@drawable/ic_start_server"
        android:layout_toStartOf="@id/start_navigation_button"
        android:layout_above="@id/start_navigation_button"
        android:layout_marginEnd="16dp"
        android:visibility="visible"
        android:scaleType="centerInside"
        android:padding="10dp" />

    <ImageButton
        android:id="@+id/navigate_phone_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:elevation="4dp"
        android:background="@drawable/navigation_mode_circle_button"
        android:src="@drawable/ic_navigate_phone"
        android:layout_toEndOf="@id/start_navigation_button"
        android:layout_above="@id/start_navigation_button"
        android:layout_marginStart="16dp"
        android:visibility="visible"
        android:scaleType="centerInside"
        android:padding="10dp" />


</RelativeLayout>
